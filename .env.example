# FableFlow Environment Variables

# Model Configuration
export MODEL_SERVER_URL="https://api.anthropic.com/v1"
export MODEL_API_KEY="your-model-api-key-here"
export DEFAULT_MODEL="claude-sonnet-4-5"

# ==================== AI Image Enhancement Configuration ====================
# Uses OpenAI SDK with configurable base URL - works with any OpenAI-compatible API

# Option 1: Google Gemini API
# Get your API key from: https://ai.google.dev/gemini-api/docs/api-key
export IMAGE_API_KEY="your-api-key-here"
export IMAGE_API_BASE="https://generativelanguage.googleapis.com/v1beta/openai/"
export IMAGE_MODEL="gemini-2.0-flash-exp"

# Option 2: OpenAI API (default if IMAGE_API_BASE not set)
# export IMAGE_API_BASE="https://api.openai.com/v1"
# export IMAGE_MODEL="gpt-4-vision-preview"

# Option 3: Self-hosted (vLLM, Ollama, LocalAI, etc.)
# export IMAGE_API_BASE="http://localhost:8000/v1"
# export IMAGE_MODEL="llava-v1.6"
